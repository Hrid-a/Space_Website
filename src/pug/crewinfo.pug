section.crew
    article.crew__image--container 
        img(src="./assets/crew/image-douglas-hurley.png", alt="douglas-hurley")
    article.crew__info 
        ul.crew__info__slide
            -for (let i=0; i<4;i++)
                if(i== 0)
                    li.active 
                else 
                    li
        div
            span.crew__info__role Commander
            h1.crew__info__name Douglas Hurley
            p.crew__info__bio Douglas Gerald Hurley is an American engineer, former Marine Corps pilot and former NASA astronaut. He launched into space for the third time as commander of Crew Dragon Demo-2.
